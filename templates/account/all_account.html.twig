{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}

    <h1 class="text-center text-white">Liste des comptes</h1>
    <div class="container-btn text-center my-4">
        <button type="button" class="btn btn-green">
            <a class="text-decoration-none" href="{{ path('app_account_new')}}">
                <i class="fa-solid fa-plus text-lightgrey"></i>
            </a>
        </button>
    </div>
    
    <div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <td class="text-green text-title">Nom</td>
                <td class="text-green text-title">Pseudo</td>
                <td class="text-green text-title">Email</td>
                <td class="text-green text-title">Date de cr√©ation</td>
            </tr>
        </thead>
        <tbody>
            {% for account in accounts%}
            <tr>
                <td>
                    <button type="button" class="btn text-red">
                        <a class="text-decoration-none" href="{{ path('app_account_edit', {'slug' : account.slug})}}">
                            <i class="fa-solid fa-pen text-green"></i>
                        </a>
                    </button>        
                    {{ account.name }}
                </td>
                <td>{{account.nickname}}</td>
                <td>{{account.email}}</td>
                <td>{{account.createdAt | format_datetime('full', 'none', locale='fr')}}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
