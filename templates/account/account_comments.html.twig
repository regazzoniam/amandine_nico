{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
<div class="global-container mt-5">
    <h2 class="text-center text-green text-title">Tous les commentaires de {{userEntity.nickname}}</h2>
        {#Format demand√© : Le 21 janvier 2022, par pseudoJoueur #}
        <div class="container my-5">
                {% for comment in userEntity.comments %}
                    <div class="card-body">
                        <h5 class="card-title font-weight-bold text-green">{{comment.game.name}}</h5>
                        <h6 class="card-subtitle mb-2 text-white">Le {{comment.createdAt | format_datetime('full', 'none', locale='fr')}} par <a class="text-green text-decoration-none" href="{{ path('app_account_show', {'slug' : comment.account.slug})}}">{{comment.account.nickname}}</a></h6>
                        <p class="card-text text-white">{{comment.content}}</p>
                        <div class="row">
                            <div class="text-green col-1"><i class="fa-solid fa-thumbs-up"></i> {{comment.upVotes}}</div>
                            <div class="text-red col-1"><i class="fa-solid fa-thumbs-down"></i> {{comment.downVotes}}</div>
                        </div>
                    </div>
                {% endfor %}
        </div>
</div>
{% endblock %}