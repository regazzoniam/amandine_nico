{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    OK
{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h1>Dernière sortie</h1>
        {% for latestGames in latestGamesArray  %}
            <div class="col-4 card" style="width: 18rem;">
                {% if latestGames.thumbnailCover is defined %}
                    <img src="{{latestGames.thumbnailCover}}" class="card-img-top" alt="{{latestGames.name}}">
                {% endif %}
                <div class="card-body">
                    <p class="card-text">{{latestGames.name}}</p>
                    <p class="card-text">{{latestGames.price}}€</p>
                </div>
            </div>
        {% endfor %}

        {% if message is defined %}
            {{ message }}
        {% endif %}
    </div>
{% endblock %}