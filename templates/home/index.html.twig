{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h1>Dernière sortie</h1>
    <div class="container my-5">
    <div class="row align-items-center justify-content-between text-center">
        {% for latestGames in latestGamesArray  %}
            <div class="col-4 card image-container">
                {% if latestGames.thumbnailCover is defined %}
                    <img src="{{latestGames.thumbnailCover}}" class="card-img-top mx-auto text_white" alt="{{latestGames.name}}">
                {% endif %}
                <div class="card-body">
                <div class="card-text row">
                    <p class="text-green col-8">{{latestGames.name}}</p>
                    <p class="text-green col-4">{{latestGames.price}}€</p>
                </div>
                </div>
            </div>
        {% endfor %}

        {% if message is defined %}
            {{ message }}
        {% endif %}
    </div>
{% endblock %}