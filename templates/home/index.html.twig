{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}


{% block body %}

    <div class="global-container my-5">
        <h2 class="text-center">Dernière sortie</h2>
        <div class="container my-5">
            <div class="row align-items-center justify-content-between text-center">
                {% for latestGames in latestGamesArray  %}
                    <div class="col-4 card border-lightgrey bg-lightgrey image-container">
                        {% if latestGames.thumbnailCover is defined %}
                            <img src="{{latestGames.thumbnailCover}}" class="card-img-top mx-auto text-white" alt="{{latestGames.name}}">
                        {% endif %}
                        <div class="card-body">
                        <div class="card-text row">
                            <p class="text-white col-8">{{latestGames.name}}</p>
                            <p class="text-green col-4">{{latestGames.price}}€</p>
                        </div>
                        </div>
                    </div>
                {% endfor %}

                {# {% if message is defined %}
                    {{ message }}
                {% endif %} #}
            </div>
        </div>
        
        <h2 class="text-center">Derniers commentaires</h2>

        <div class="container my-5">
            {# <div class="row align-items-center justify-content-between text-center"> #}
                {% for comment in latestCommentsArray %}
                {# <div class="col-3 card border-lightgrey bg-lightgrey image-container"> #}
                    <div class="card-body">
                        <p class="card-text text-white">{{comment.content}}</p>
                        <div class="text-green"><i class="fa-solid fa-thumbs-up"></i>{{comment.upVotes}}</div>
                        <div class="text-grey"><i class="fa-solid fa-thumbs-down"></i>{{comment.downVotes}}</div>
                    </div>
                {# </div> #}
                {% endfor %}
            {# </div> #}
        </div>
    </div>
{% endblock %}