{% extends 'base-front.html.twig' %}

{% block title %}
{% endblock %}


{% block body %}

    <div class="global-container mt-5">
        <h2 class="text-center text-green category text-title">Les dernières sorties</h2>
        <div class="container my-5">
            <div class="row align-items-center justify-content-between text-center">
                {% for game in latestGamesArray  %}
                    {% include "game/_card.html.twig" %}
                {% endfor %}
                {# {% if message is defined %}
                    {{ message }}
                {% endif %} #}
            </div>
        </div>


        <h2 class="text-center text-green text-title">Les plus joués</h2>
        <div class="container my-5">
            <div class="row align-items-center justify-content-between text-center">
                {% for game in mostPlayedGamesArray  %}
                    {% include "game/_card.html.twig" %}
                {% endfor %}
            </div>
        </div>
        
        <h2 class="text-center text-green text-title">Les derniers commentaires</h2>
        <div class="container my-5">
                {% for comment in latestCommentsArray %}
                    {% include "comment/_card.html.twig" %}
                {% endfor %}
        </div>

        <h2 class="text-center text-green text-title">Les plus achetés</h2>
        <div class="container my-5">
            <div class="row align-items-center justify-content-between text-center">
                {% for game in mostBoughtGamesArray  %}
                    {% include "game/_card.html.twig" %}
                {% endfor %}
            </div>
        </div>



    </div>
{% endblock %}