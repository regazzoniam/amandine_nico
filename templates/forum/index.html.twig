{% extends 'base-front.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
    <h1 class="text-green text-center">Tous les Forums</h1>
    <div class="container">
        <table class="table table-dark table-striped text-center">
            <thead>
            <tr>
                <td> Nom du forum</td>
                <td> Date de cr√©ation</td>
                <td>Nombre de topics</td>
            </tr>
            </thead>
            <tbody>
            {% for forum in forums %}
                <tr>
                    <td>
                        <a href="{{ path('app_forum_details', {'id': forum.id}) }}" >{{ forum.title }}</a>
                    </td>
                    <td>
                        {{ forum.createdAt | date('Y/m/d') }}
                    </td>
                    <td>
                        {{ forum.topics | length }}
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
