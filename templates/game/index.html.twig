        <div class="row align-items-center justify-content-between">
                {% for game in tabGames %}
                <div class="col-4 card" style="width: 18rem;">
                    {% if game.thumbnailCover is defined %}
                    <img src="{{game.thumbnailCover}}" class="card-img-top" alt="{{game.name}}">
                    {% endif %}
                <div class="card-body">
                    <p class="card-text">{{game.name}}</p>
