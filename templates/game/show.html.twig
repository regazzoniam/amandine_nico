{% extends 'base.html.twig' %}

{% block body %}
<div class="container">

    <div class="row">
        <div class="col-lg-5">
            <div class="containerDetailsimg px-5">
                <img src="{{ game.thumbnailCover }}">
            </div>
        </div>
        <div class="col-lg-7 ">
            <h1 class="mb-4 text-green text-title">{{ game.name}}</h1>
            <h2>Description</h2>
            <p class="text-white"> {{ game.description }} </p>

            <h2>Genre</h2>
            <p class="text-white">
            {% for genreValues in game.genres%}
                {{genreValues.name}}
            {% endfor %}
            </p>

            <h2>Langues disponibles</h2>
            {% for countriesValues in game.countries  %}
                <img src="{{ countriesValues.urlFlag }}" title="{{ countriesValues.name }}">
            {% endfor %}
        </div>
        <div>
        </div>

        <h2 class="text-center text-green text-title">Les derniers commentaires</h2>
        <div class="container my-5">
            {% for comment in game.comments | slice(0,6)%}
            <div class="card-body">
                <h5 class="card-title font-weight-bold text-green">{{comment.game.name}}</h5>
                <h6 class="card-subtitle mb-2 text-white">Le {{comment.createdAt | format_datetime('full', 'none', locale='fr')}} par <a class="text-green text-decoration-none" href="{{ path('app_account_show', {'slug' : comment.account.slug})}}">{{comment.account.nickname}}</a></h6>
                <p class="card-text text-white">{{comment.content}}</p>
                <div class="row">
                    <div class="text-green col-1"><i class="fa-solid fa-thumbs-up"></i> {{comment.upVotes}}</div>
                    <div class="text-red col-1"><i class="fa-solid fa-thumbs-down"></i> {{comment.downVotes}}</div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block title %}

{% endblock %}

